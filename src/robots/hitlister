#!/usr/bin/env python
# vim: set fileencoding=utf-8:

from ardj import Open

def pick_jingle(cur, label):
    row = cur.execute('SELECT track_id FROM labels WHERE label = ? ORDER BY RANDOM() LIMIT 1', (label, )).fetchone()
    if row:
        return row[0]

def get_tracks(cur):
    rows = cur.execute('SELECT id FROM tracks WHERE id IN (SELECT track_id FROM labels WHERE label = ?) ORDER BY weight DESC LIMIT 10', ('music', )).fetchall():
    return [row[0] for row in tracks]

def get_queue_tracks(cur):
    queue_ids = []
    jlabels = [ 'hitlist-begin', 'hitlist-mid', 'hitlist-mid', 'hitlist-end' ]
    for track_id in get_tracks(cur):
        if len(queue_ids) % 4 == 0:
            queue_ids.append(pick_jingle(cur, jlabels[0]))
            del jlabels[0]
        queue_ids.append(track_id)
    return queue_ids

def queue_tracks(cur, track_ids):
    for track_id in track_ids:
        cur.execute('INSERT INTO queue (track_id, owner) VALUE (?, ?)', (track_id, 'robot', ))

ardj = Open()
cur = ardj.database.cursor()
queue_tracks(cur, get_queue_tracks(cur))
ardj.database.commit()
